<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:padding="16dp">

    <!-- Top Bar -->
    <LinearLayout
        android:id="@+id/topBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="16dp">

        <!-- Logo -->
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/quickmark"
            android:contentDescription="Logo" />

        <!-- App Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QuickMark"
            android:textColor="#0B5C51"
            android:textSize="22sp"
            android:textStyle="bold"
            android:layout_marginStart="8dp"
            android:layout_weight="1" />

        <!-- Logout Button -->
        <Button
            android:id="@+id/btnLogout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textColor="#FFFFFF"
            android:backgroundTint="#0B5C51"
            android:padding="10dp" />
    </LinearLayout>

    <!-- Card in Center -->

    <LinearLayout
        android:id="@+id/cardLayout"
        android:layout_width="321dp"
        android:layout_height="236dp"
        android:layout_above="@+id/btnClockIn"
        android:layout_below="@id/topBar"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="38dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="37dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="44dp"
        android:background="#0B5C51"
        android:elevation="8dp"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Class -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Class: kb-classes"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Lecturer ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Lecturer ID : 1011"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Attendance ID -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="Attendance ID : xnxx-xx"
            android:textColor="#FFFFFF"
            android:textSize="18sp" />

        <!-- Clock In Button -->
    </LinearLayout>

    <Button
        android:id="@+id/btnClockIn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="134dp"
        android:backgroundTint="#0B5C51"
        android:elevation="4dp"
        android:padding="14dp"
        android:text="Clock In"
        android:textColor="#FFFFFF" />

</RelativeLayout>
